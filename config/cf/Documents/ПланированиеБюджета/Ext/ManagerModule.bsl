// Функция печати документа
//
Функция ПечатнаяФорма(МассивОбъектов, ОбъектыПечати, ИмяМакета)
	
	ТабличныйДокумент = Новый ТабличныйДокумент;
	ТабличныйДокумент.КлючПараметровПечати = "ПараметрыПечати_ПланированиеБюджета";
	
	ПервыйДокумент = Истина;
	
	Для каждого ТекущийДокумент Из МассивОбъектов Цикл
	
		Если НЕ ПервыйДокумент Тогда
			ТабличныйДокумент.ВывестиГоризонтальныйРазделительСтраниц();
		КонецЕсли;
		ПервыйДокумент = Ложь;
		
		НомерСтрокиНачало = ТабличныйДокумент.ВысотаТаблицы + 1;
		
		СтруктураЗаполнения = УправлениеITОтделом8УФ.СтруктураЗаполненияПечатнойФормы(ТекущийДокумент);	
				
		Если ИмяМакета = "ПланируемыйБюджет" Тогда
			
			Если ТекущийДокумент.БезУчетаКоличества = Истина  Тогда
				
				ВыборкаСтрок = СтруктураЗаполнения.Бюджеты;
				
				Макет = УправлениеПечатью.МакетПечатнойФормы("Документ.ПланированиеБюджета.ПФ_MXL_ПланируемыйБюджет");
				ТабличныйДокумент.КлючПараметровПечати = "ПАРАМЕТРЫ_ПЕЧАТИ_ПланированиеБюджета_ПланируемыйБюджет";
				
				ОбластьШапка         = Макет.ПолучитьОбласть("Шапка");
				ОбластьШапкаТаблицы  = Макет.ПолучитьОбласть("ШапкаТаблицы");
				ОбластьСтрокаТаблицы = Макет.ПолучитьОбласть("СтрокаТаблицы");
				ОбластьПодвал        = Макет.ПолучитьОбласть("Подвал");
				ОбластьИтого         = Макет.ПолучитьОбласть("Итого");
				
				ЗаполнитьЗначенияСвойств(ОбластьШапка.Параметры, СтруктураЗаполнения);			
				ТабличныйДокумент.Вывести(ОбластьШапка);
				
				ТабличныйДокумент.Вывести(ОбластьШапкаТаблицы);
				
				Сумма	   = 0;
				
				Для Каждого СтрокаВыборки Из ВыборкаСтрок Цикл
					ЗаполнитьЗначенияСвойств(ОбластьСтрокаТаблицы.Параметры, СтрокаВыборки); 
					ТабличныйДокумент.Вывести(ОбластьСтрокаТаблицы);
					Сумма = Сумма + СтрокаВыборки.Сумма;
				КонецЦикла;
				
				СтруктураЗаполнения.Вставить("ИтогСумма", Сумма);
				ЗаполнитьЗначенияСвойств(ОбластьИтого.Параметры, СтруктураЗаполнения); 
				ТабличныйДокумент.Вывести(ОбластьИтого);
				
				СтруктураЗаполнения.Вставить("ДолжностьСотрудника", СтруктураЗаполнения.ТекущийПользователь.Сотрудник.Должность);
				СтруктураЗаполнения.Вставить("ФИО", ФизическиеЛицаКлиентСервер.ФамилияИнициалы(СтруктураЗаполнения.ТекущийПользователь.Наименование));
				ЗаполнитьЗначенияСвойств(ОбластьПодвал.Параметры, СтруктураЗаполнения); 
				ТабличныйДокумент.Вывести(ОбластьПодвал);
				
			Иначе
				
				ВыборкаСтрок = СтруктураЗаполнения.Бюджеты;
				
				Макет = УправлениеПечатью.МакетПечатнойФормы("Документ.ПланированиеБюджета.ПФ_MXL_ПланируемыйБюджет");
				ТабличныйДокумент.КлючПараметровПечати = "ПАРАМЕТРЫ_ПЕЧАТИ_ПланированиеБюджета_ПланируемыйБюджет";
				
				ОбластьШапкаКоличество         			= Макет.ПолучитьОбласть("ШапкаКоличество");
				ОбластьШапкаТаблицыКоличество   = Макет.ПолучитьОбласть("ШапкаТаблицыКоличество");
				ОбластьСтрокаТаблицыКоличество	= Макет.ПолучитьОбласть("СтрокаТаблицыКоличество");
				ОбластьПодвал        			= Макет.ПолучитьОбласть("Подвал");
				ОбластьИтогоКоличество   		= Макет.ПолучитьОбласть("ИтогоКоличество");
				
				ЗаполнитьЗначенияСвойств(ОбластьШапкаКоличество.Параметры, СтруктураЗаполнения);			
				ТабличныйДокумент.Вывести(ОбластьШапкаКоличество);
				
				ТабличныйДокумент.Вывести(ОбластьШапкаТаблицыКоличество);
				
				Сумма	   = 0;
				
				Для Каждого СтрокаВыборки Из ВыборкаСтрок Цикл
					ЗаполнитьЗначенияСвойств(ОбластьСтрокаТаблицыКоличество.Параметры, СтрокаВыборки); 
					ТабличныйДокумент.Вывести(ОбластьСтрокаТаблицыКоличество);
					Сумма = Сумма + СтрокаВыборки.Сумма;
				КонецЦикла;
				
				СтруктураЗаполнения.Вставить("ИтогСумма", Сумма);
				ЗаполнитьЗначенияСвойств(ОбластьИтогоКоличество.Параметры, СтруктураЗаполнения); 
				ТабличныйДокумент.Вывести(ОбластьИтогоКоличество);
				
				СтруктураЗаполнения.Вставить("ДолжностьСотрудника", СтруктураЗаполнения.ТекущийПользователь.Сотрудник.Должность);
				СтруктураЗаполнения.Вставить("ФИО", ФизическиеЛицаКлиентСервер.ФамилияИнициалы(СтруктураЗаполнения.ТекущийПользователь.Наименование));
				ЗаполнитьЗначенияСвойств(ОбластьПодвал.Параметры, СтруктураЗаполнения); 
				ТабличныйДокумент.Вывести(ОбластьПодвал);
				
			КонецЕсли;
		КонецЕсли;
	КонецЦикла;
	
	ТабличныйДокумент.АвтоМасштаб = Истина;
	
	Возврат ТабличныйДокумент;
	
КонецФункции // ПечатнаяФорма()

